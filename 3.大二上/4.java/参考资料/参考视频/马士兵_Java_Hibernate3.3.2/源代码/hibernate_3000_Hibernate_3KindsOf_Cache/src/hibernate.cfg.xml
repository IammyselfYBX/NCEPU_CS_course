		 -->
		 <mapping class="com.bjsxt.hibernate.Category"/>
		  <mapping class="com.bjsxt.hibernate.Msg"/>
		  <mapping class="com.bjsxt.hibernate.Topic"/>
		  
        
		
    </session-factory>

</hibernate-configuration>